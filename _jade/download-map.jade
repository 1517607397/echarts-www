extends layouts/basic

block extra_head
    <title>ECharts Map Download</title>
    link(rel="stylesheet", type="text/css", href="vendors/prettify/prettify.css")

block content
    nav(class='navbar navbar-default navbar-fixed-top')
        include components/nav

    .page-info
        h1 地图下载
        p ECharts 提供世界、中国、各省地图，数据来自第三方

    .page-content#map-download
        #maps
            #map-list.container
                .row
                    .col-md-5.col-md-offset-1.col-xs-6
                        h3 中国地图
                            span China
                        a(href="asset/map/json/china.json" download="china.json" target="_blank")
                            img(src="asset/map/thumb/china.png" alt="")
                        .links
                            a(href="asset/map/js/china.js" download="china.js" target="_blank") JS
                            a(href="asset/map/json/china.json" download="china.json" target="_blank") JSON
                    .col-md-5.col-xs-6
                        h3 世界地图
                            span world
                        a(href="asset/map/json/world.json" download="world.json" target="_blank")
                            img(src="asset/map/thumb/world.png" alt="")
                        .links
                            a(href="asset/map/js/world.js" download="world.js" target="_blank") JS
                            a(href="asset/map/json/world.json" download="world.json" target="_blank") JSON

                .row
                    .col-md-11.col-md-offset-1
                        h3 各省地图
                            span province
                .row
                    each provinceName, idx in province
                        if idx % 5 === 0
                            .col-md-2.col-md-offset-1.col-sm-3.col-xs-4.province
                                a(href="asset/map/json/province/#{provincePinyin[idx]}.json" download="#{provincePinyin[idx]}.json" target="_blank")
                                    img(src="asset/map/thumb/#{provincePinyin[idx]}.png" alt="")
                                h5 #{provinceName}
                                div.links
                                    a(href="asset/map/js/province/#{provincePinyin[idx]}.js" download="#{provincePinyin[idx]}.js" target="_blank") JS
                                    a(href="asset/map/json/province/#{provincePinyin[idx]}.json" download="#{provincePinyin[idx]}.json" target="_blank") JSON
                        else
                            .col-md-2.col-sm-3.col-xs-4.province
                                a(href="asset/map/json/province/#{provincePinyin[idx]}.json" download="#{provincePinyin[idx]}.json" target="_blank")
                                    img(src="asset/map/thumb/#{provincePinyin[idx]}.png" alt="")
                                h5 #{provinceName}
                                div.links
                                    a(href="asset/map/js/province/#{provincePinyin[idx]}.js" download="#{provincePinyin[idx]}.js" target="_blank") JS
                                    a(href="asset/map/json/province/#{provincePinyin[idx]}.json" download="#{provincePinyin[idx]}.json" target="_blank") JSON

            section.section-bg
                a.btn.btn-thirdary.more-btn(href='http://ecomfe.github.io/echarts-map-tool/') 地图定制
                p 可在线选择生成省、市、县各级地图

            .container
                #map-example
                    h4 JavaScript 引入示例
                    pre(class="html").
                        &lt;script src="echarts.js"&gt;&lt;/script&gt;
                        &lt;script src="map/js/china.js"&gt;&lt;/script&gt;
                        &lt;script&gt;
                        var chart = echarts.init(document.getElementById('main'));
                        chart.setOption({
                            series: [{
                                type: 'map',
                                map: 'china'
                            }]
                        });
                        &lt;/script&gt;

                    h4 JSON 引入示例
                    pre(class="js").
                        $.get('map/json/china.json', function (chinaJson) {
                            echarts.registerMap('china', chinaJson);
                            var chart = echarts.init(document.getElementById('main'));
                            chart.setOption({
                                series: [{
                                    type: 'map',
                                    map: 'china'
                                }]
                            });
                        });

    include ./components/footer

block extra_js
    script(src="vendors/prettify/prettify.js")
    script(src="vendors/prettify/lang-css.js")
    script.
        $('pre').addClass('prettyprint');
        prettyPrint();