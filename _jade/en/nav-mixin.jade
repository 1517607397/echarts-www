mixin nav(basePath)
    .container-fluid
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#{basePath}/index.html')
                img.navbar-logo(src='./images/logo.png', alt='echarts logo')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-left
                li#nav-index
                    a(href='#{basePath}/index.html') Home
                li#nav-downloads
                    a(href='#{basePath}/download.html') Downloads
                li#nav-start.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | Get Started
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#{basePath}/tutorial.html') Tutorials
                        li
                            a(href='https://ecomfe.github.io/echarts-examples/public/index.html', target='_blank') Examples
                        li
                            a(href='https://gallery.echartsjs.com', target='_blank') Gallery
                li#nav-doc.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | Docs
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#{basePath}/option.html') Chart Configuration
                        li
                            a(href='#{basePath}/api.html') API
                        li
                            a(href='#{basePath}/changelog.html') Changelog
                li#nav-contribute
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | Contribute
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='https://github.com/apache/incubator-echarts', target='_blank') Source Code
                        li
                            a(href='https://github.com/apache/incubator-echarts/issues', target='_blank') Issue Tracking
                        li
                            a(href='#{basePath}/coding-standard.html') Coding Standards
                li#nav-about
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                        | About
                        b.caret
                    ul.dropdown-menu
                        li
                            a(href='#{basePath}/license.html') License
                        li
                            a(href='#{basePath}/maillist.html') Mailling List
                        li
                            a(href='#{basePath}/committers.html') Committers
                        li
                            a(href='#{basePath}/dependencies.html') Dependencies
                        li
                            a(href='#{basePath}/faq.html') FAQ
            ul.nav.navbar-nav.navbar-right
                li#nav-github
                    a(href="https://github.com/ecomfe/echarts" target="_blank")
                        img(src="./images/github.png", width="18")
